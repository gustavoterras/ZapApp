<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.TranslucentStatusBar" parent="AppTheme">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@color/colorOrangeDark</item>
    </style>


    <!--TextView Style Content-->
    <style name="AppTheme.TextViewContent">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/colorGray</item>
    </style>

    <!--TextView Style Content white-->
    <style name="AppTheme.TextViewContent.ColorWhite">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

</resources>
